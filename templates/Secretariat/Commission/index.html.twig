{% extends 'base.html.twig' %}

{% block title %}
    AFA-Manager
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>Liste des commissions</h1>
    <a class="btn btn-primary" href="{{ path('secretariat-commissionCreate') }}">Ajouter</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        {% for commission in commissions %}
            <tr>
                <td class="align-middle">{{ commission.getCommissionName() }}</td>
                <td class="align-middle text-center">
                    <div class="btn-group" role="group" aria-label="Commandes">
                        <button type="button" class="btn btn-primary">Commandes</button>
                        <div class="btn-group" role="group">
                            <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                                <a class="dropdown-item" href="{{ path('secretariat-commissionDetails', {'commission': commission.commissionId()}) }}">Liste des Membres</a>
                                <a class="dropdown-item" href="{{ path('secretariat-commissionHistory', {'commission': commission.commissionId()}) }}">Historique</a>
                                <a class="dropdown-item" href="{{ path('secretariat-commissionRename', {'commission': commission.commissionId()}) }}">Renommer</a>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
{% endblock %}
